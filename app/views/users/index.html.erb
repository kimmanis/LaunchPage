<div class="row">
  <div class="col-lg-3 col-lg-offset-3">
    <div class="panel text-center">
      <h1><%= @users.count %></h1>
      <p>REGISTRATIONS</p>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="panel text-center">
      <h1><%= @referrals %></h1>
      <p>REFERRALS</p>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <%= link_to "Export", users_path(format: "xls"), :class=>"btn btn-default pull-right" %><br /><br />
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <table class="table-hover table-striped users-table pretty" cellpadding="5px" style="width:100%;">
          <thead>
            <tr>
              <th><%= sortable "email", "Email Address" %></th>
              <th><%= sortable "count", "Referral Count" %></th>
              <th><%= sortable "created_at", "Join Date" %></th>
              <th>Delete</th>
            </tr>
          </thead>
        <% @users.each do |user|  %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.count %></td>
            <td><%= user.created_at.to_date %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>
        <%= paginate @users %>
    </div>
</div>